      <mat-card style="margin-bottom: 40px">
        <mat-card-content>
          <h4>Delibere dell'intervento</h4>
          <div class="delibere-div">
            <p class="delibere-p small-text">D.G.R. di approvazione</p>
            <mat-form-field class="durata-stimata-input">
              <mat-label>Numero</mat-label>
              <form>
                <input matInput type="text" [(ngModel)]="DGRApprovazione.intAllegatoNumero" name="DGRApprovazioneNumero"/>
              </form>
            </mat-form-field>
            <mat-form-field class="durata-stimata-input">
              <mat-label>Data atto</mat-label>
              <form>
                <input matInput [matDatepicker]="DGRApprpicker" [max]="maxDate" readonly  (click)="DGRApprpicker.open()" placeholder="gg/mm/aaaa"
                  [(ngModel)]="DGRApprovazione.intAllegatoData" name="DGRApprovazioneData" (keydown)="onInputDate($event)">
              </form>
              <mat-datepicker-toggle matSuffix [for]="DGRApprpicker"></mat-datepicker-toggle>
              <mat-datepicker #DGRApprpicker></mat-datepicker>
            </mat-form-field>
            <p (click)="fileInputDGRApprovazione.click()" class="upload-button">Allega</p>
            <input #fileInputDGRApprovazione type="file" accept=".pdf" (change)="onFileDGRApprovazioneSelected($event)"
              style="display: none" />
            <div *ngIf="DGRApprovazione.fileNameUser" class="delibere-download-div">
              <a [href]="fileUrlDGRApprovazione" [download]="DGRApprovazione.fileNameUser" target="_blank">{{
                DGRApprovazione.fileNameUser }}</a>
              <button mat-icon-button (click)="removeFileDGRApprovazione()" style="color: red;">
                <mat-icon>delete</mat-icon>
              </button>
            </div>
          </div>
          <div class="delibere-div">
            <p class="delibere-p small-text">D.G.R. di proposta al Consiglio Regionale</p>
            <mat-form-field class="durata-stimata-input">
              <mat-label>Numero</mat-label>
              <form>
                <input matInput type="text" [(ngModel)]="DGRPropostaConsiglioRegionale.intAllegatoNumero"
                  name="DGRApprovazioneConsRegionaleNumero"/>
              </form>
            </mat-form-field>
            <mat-form-field class="durata-stimata-input">
              <mat-label>Data atto</mat-label>
              <form>
                <input matInput [matDatepicker]="DGRPropCRPicker" [max]="maxDate" placeholder="gg/mm/aaaa" readonly  (click)="DGRPropCRPicker.open()"
                  [(ngModel)]="DGRPropostaConsiglioRegionale.intAllegatoData" name="DGRApprovazioneConsRegionaleData" (keydown)="onInputDate($event)">
              </form>
              <mat-datepicker-toggle matSuffix [for]="DGRPropCRPicker"></mat-datepicker-toggle>
              <mat-datepicker #DGRPropCRPicker></mat-datepicker>
            </mat-form-field>
            <p class="upload-button" (click)="fileInputDGRPropostaConsRegionale.click()">Allega</p>
            <input #fileInputDGRPropostaConsRegionale type="file" accept=".pdf"
              (change)="onFileDGRPropostaConsRegionaleSelected($event)" style="display: none" />
            <div *ngIf="DGRPropostaConsiglioRegionale.fileNameUser" class="delibere-download-div">
              <a [href]="fileUrlDGRPropostaConsRegionale" [download]="DGRPropostaConsiglioRegionale.fileNameUser"
                target="_blank">{{ DGRPropostaConsiglioRegionale.fileNameUser }}</a>
              <button mat-icon-button (click)="removeFileDGRPropostaConsiglioRegionale()" style="color: red;">
                <mat-icon>delete</mat-icon>
              </button>
            </div>
          </div>
          <div class="delibere-div">
            <p class="delibere-p small-text">D.C.R. di approvazione</p>
            <mat-form-field class="durata-stimata-input">
              <mat-label>Numero</mat-label>
              <form>
                <input matInput type="text" [(ngModel)]="DCRApprovazione.intAllegatoNumero" name="DCRApprovazioneNumero" />
              </form>
            </mat-form-field>
            <mat-form-field class="durata-stimata-input">
              <mat-label>Data atto</mat-label>
              <form>
                <input matInput [matDatepicker]="DCRApprPicker" [max]="maxDate"  readonly  (click)="DCRApprPicker.open()" placeholder="gg/mm/aaaa"
                  [(ngModel)]="DCRApprovazione.intAllegatoData" name="DCRApprovazioneData" (keydown)="onInputDate($event)">
              </form>
              <mat-datepicker-toggle matSuffix [for]="DCRApprPicker"></mat-datepicker-toggle>
              <mat-datepicker #DCRApprPicker></mat-datepicker>
            </mat-form-field>
            <p class="upload-button" (click)="fileInputDCRApprovazione.click()">Allega</p>
            <input #fileInputDCRApprovazione type="file"  accept=".pdf" (change)="onFileDCRApprovazioneSelected($event)"
              style="display: none" />
            <div *ngIf="DCRApprovazione.fileNameUser" class="delibere-download-div">
              <a [href]="fileUrlDCRApprovazione" [download]="DCRApprovazione.fileNameUser" target="_blank">{{
                DCRApprovazione.fileNameUser }}</a>
              <button mat-icon-button (click)="removeFileDCRApprovazione()" style="color: red;">
                <mat-icon>delete</mat-icon>
              </button>
            </div>
          </div>
          <div class="determinazioni-dirigenziali-div">
            <p class="small-text">Determinazioni Dirigenziali</p>
            <p class="determinazioni-dirigenziali-button upload-button" (click)="fileInputDeterminazioniDirigenziali.click()">Aggiungi</p>
            <input #fileInputDeterminazioniDirigenziali type="file" accept=".pdf"
              (change)="onFileDeterminazioniDirigenzialiSelected($event)" style="display: none" />
          </div>
          <mat-error *ngIf="isAllegatiInvalid">
            Per poter salvare i dati è necessario che sia presente:
            <br> - Una DGR di Approvazione con almeno una Determinazione Dirigenziale.
            <br> - Oppure una DGR di Proposta al Consiglio Regionale, una DCR di Approvazione e almeno una Determinazione Dirigenziale.
          </mat-error>
          <table class="mat-table piani-finanziari-table" *ngIf="DeterminazioniDirigenziali.length">
            <tr class="mat-header-row">
              <th class="mat-header-cell">D.D.n.</th>
              <th class="mat-header-cell">Data</th>
              <th class="mat-header-cell">Allegato</th>
              <th class="mat-header-cell"></th>
            </tr>
            <tr *ngFor="let row of DeterminazioniDirigenziali; let index = index">
              <td class="mat-cell">
                <mat-form-field class="durata-stimata-input">
                  <mat-label>Numero</mat-label>
                  <form>
                    <input matInput type="text" [(ngModel)]="DeterminazioniDirigenziali[index].intAllegatoNumero" name="DCRApprovazioneNumero" />
                  </form>
                </mat-form-field>
              </td>
              <td class="mat-cell">
                <mat-form-field class="durata-stimata-input">
                  <mat-label>Data atto</mat-label>
                  <form>
                    <input matInput [matDatepicker]="DetDirPicker" [max]="maxDate" placeholder="gg/mm/aaaa" readonly  (click)="DetDirPicker.open()"
                      [(ngModel)]="DeterminazioniDirigenziali[index].intAllegatoData" [name]="'DeterminazioneDirigenzialeData_' + index" (keydown)="onInputDate($event)">
                  </form>
                  <mat-datepicker-toggle matSuffix [for]="DetDirPicker"></mat-datepicker-toggle>
                  <mat-datepicker #DetDirPicker></mat-datepicker>
                </mat-form-field>
              </td>
              <td class="mat-cell">
                <a [href]="fileUrlDeterminazioniDirigenziali![index]" [download]="DeterminazioniDirigenziali[index].fileNameUser" target="_blank">{{
                DeterminazioniDirigenziali[index].fileNameUser }}</a>
              </td>
              <td class="mat-cell">
                <button mat-icon-button (click)="removeFileDeterminazioneDirigenziale(index)">
                  <mat-icon>delete</mat-icon>
                </button>
              </td>
            </tr>
          </table>
        </mat-card-content>
      </mat-card>

      <div class="search-container">
        <div class="buttons" mat-dialog-actions>
          <button mat-button color="primary" (click)="back()">INDIETRO</button>
          <button mat-flat-button color="primary" style="margin-right: 10px; margin-top: 10px; margin-left: 20px"  type="button" (click)="approva()" *ngIf="salvataggioEffettuato">Approva</button>
        </div>
        <div style="display: flex; align-items: center; gap: 10px; margin-right: 10px; margin-top: 10px;">
          <button mat-flat-button color="primary">
            Salva
          </button>
        </div>
      </div>
    </form>
  </ng-container>
