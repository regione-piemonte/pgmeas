<h1 class="pgmeas-primary-text">Modifica intervento Regione</h1>
<ng-container *ngIf="!loading; else loadingTemplate">
  <ng-container *ngIf="!salvataggioEffettuato; else salvataggioTemplate">
    <mat-card style="margin-bottom: 40px">
      <mat-card-header>
        <a>
          <h2>Riferimenti temporali dell'intervento</h2>
        </a>
      </mat-card-header>
      <mat-card-content>
        <div class="date-programmazioni">
          <p class="small-text">
            Triennio: <b>{{ user.programmazione.triennio }}</b>
          </p>
        </div>
        <div class="date-programmazioni">
          <p class="small-text">
            Anno di inserimento intervento:
            <b>{{ user.programmazione.annoInserimentIntervento }}</b>
          </p>
        </div>
        <div class="date-programmazioni">
          <div class="date-margin" class="small-text">
            Data inizio programmazione:
            <b>{{ user.programmazione.dataInizioProgrammazione }}</b>
          </div>
          &nbsp;&nbsp;&nbsp;&nbsp;
          <div class="small-text">
            Data fine programmazione:
            <b>{{ user.programmazione.DataFineProgrammazione }}</b>
          </div>
          &nbsp;&nbsp;&nbsp;&nbsp;
          <div class="small-text" *ngIf="user.programmazione.dataFineProroga">
            Data fine proroga:
            <b>{{ user.programmazione.dataFineProroga }}</b>
          </div>
        </div>
        <div class="date-programmazioni">
          <p class="small-text">
            Data di inserimento dell'intervento: <b>{{ dataCreazione }}</b>
          </p>
        </div>
      </mat-card-content>
    </mat-card>

    <mat-card style="margin-bottom: 40px">
      <mat-card-header>
        <h2>Localizzazione dell'intervento</h2>
      </mat-card-header>
      <mat-card-content>
        <div class="date-programmazioni">
          <p class="small-text">
            Azienda: <b>{{ user.descAzienda }}</b>
          </p>
        </div>
        <div class="date-programmazioni">
          <p class="small-text">
            Quadrante: <b>{{ user.descrQuadrante }}</b>
          </p>
        </div>
      </mat-card-content>
    </mat-card>
    <form [formGroup]="insertionForm" (ngSubmit)="submit()">
      <mat-card style="margin-bottom: 40px">
        <mat-card-content>

          <h4>Strutture</h4>

          <div formArrayName="struttureAggiunte">
            <ng-container *ngFor="
          let strutturaInsInt of struttureAggiunte.controls;
          let index = index
        " [formGroupName]="index">
              <mat-expansion-panel>
                <mat-expansion-panel-header>
                  <h4 class="pgmeas-primary-text">{{ strutturaInsInt.value.struttura?.strDenominazione }}
                    ({{ strutturaInsInt.value.struttura?.strCod }})
                  </h4>
                </mat-expansion-panel-header>
                <p class="small-text">
                  Comune Struttura: {{ getComune(strutturaInsInt.value.struttura) }}
                </p>
                <mat-expansion-panel>
                  <mat-expansion-panel-header>
                    <h4>Tipo Intervento Edilizio (ex art. 3 D.P.R. 380 del 6 giugno 2001)</h4>
                  </mat-expansion-panel-header>
                  <div formArrayName="listaInterventiEdilizi">
                    <ng-container *ngFor="let intervento of getListaInterventiEdilizi(index).controls, let i = index"
                      [formGroupName]="i">
                      <div class="intervento-edilizio-div small-text"
                        [ngStyle]="{'margin-left.px': getMarginFromSpazi(intervento.value.livello), 'margin-bottom': !intervento.value.selezionabile ? '20px' : '0'}">
                        <mat-slide-toggle style="margin-bottom: 20px" *ngIf="intervento.value.selezionabile"
                          formControlName="selezionato" />
                        <span *ngIf="!intervento.value.selezionabile"
                          style="display: inline-block; width: 40px;"></span>
                        {{ intervento.value.descrizione }}
                      </div>
                    </ng-container>
                  </div>
                </mat-expansion-panel>
                <mat-expansion-panel>
                  <mat-expansion-panel-header>
                    <h4>Costo complessivo della struttura</h4>
                  </mat-expansion-panel-header>
                  <!-- <mat-form-field  class="custom-costo-width">
                    <mat-label>Costo Struttura</mat-label>
                    <input matInput type="number" formControlName="costoStruttura" min="0" style="text-align: right;"
                    (keypress)="allowOnlyNumbers($event)"
                    appForceTwoDecimals/>
                  </mat-form-field><a style="padding-left: 10px;">€</a> -->
                  <app-formatted-currency
                  formControlName="costoStruttura"
                  label="Costo Struttura"
                  [isDisabledIn]="true"
                ></app-formatted-currency>
                </mat-expansion-panel>
                <mat-expansion-panel>
                  <mat-expansion-panel-header>
                    <h4>
                      Cronoprogramma della Struttura (in giorni naturali
                      consecutivi)
                    </h4>
                  </mat-expansion-panel-header>
                  <p class="small-text">
                    La durata deve essere comprensiva di tutte le procedure
                    amministrative propedeutiche all'approvazione di ogni singola
                    fase
                  </p>
                  <div class="durata-stimata-div">
                    <mat-form-field class="durata-stimata-input">
                      <mat-label>PROGETTAZIONE</mat-label>
                      <input matInput type="number" formControlName="progettazione" min="0"
                        (keypress)="allowOnlyNumbers($event)" />
                    </mat-form-field>
                    <mat-form-field class="durata-stimata-input">
                      <mat-label>AFFIDAMENTO LAVORI</mat-label>
                      <input matInput type="number" formControlName="affidamentoLavori" min="0"
                        (keypress)="allowOnlyNumbers($event)" />
                    </mat-form-field>
                    <mat-form-field class="durata-stimata-input">
                      <mat-label>ESECUZIONE LAVORI</mat-label>
                      <input matInput type="number" formControlName="esecuzioneLavori" min="0"
                        (keypress)="allowOnlyNumbers($event)" />
                    </mat-form-field>
                    <mat-form-field>
                      <mat-label>COLLAUDO</mat-label>
                      <input matInput type="number" formControlName="collaudo" min="0"
                        (keypress)="allowOnlyNumbers($event)" />
                    </mat-form-field>
                  </div>
                  <div class="appalto-integrato-div">
                    <p class="appalto-integrato-p" class="small-text">APPALTO INTEGRATO</p>
                    <mat-slide-toggle formControlName="appaltoIntegrato"></mat-slide-toggle>
                  </div>
                  <p class="small-text">
                    Totale durata stimata della struttura (in giorni naturali complessivi):
                    <b>{{ strutturaInsInt.value.totaleDurataStimataIntervento }}</b>
                  </p>
                </mat-expansion-panel>
                <mat-expansion-panel>
                  <mat-expansion-panel-header>
                    <h4>Quadro economico</h4>
                  </mat-expansion-panel-header>
                  <!-- <div formArrayName="listaQuadroEconomico">
                    <ng-container *ngFor="let quadro of getListaQuadroEconomico(index).controls, let i = index"
                      [formGroupName]="i">
                      <div
                        [ngStyle]="{'margin-left.px': getMarginFromSpazi(quadro.value.livello), 'margin-bottom': !quadro.value.selezionabile ? '20px' : '0'}"
                        class="small-text">
                        {{ quadro.value.descrizione }}
                        <div *ngIf="quadro.value.selezionabile">
                          <mat-form-field>
                            <input matInput type="text" formControlName="valoreNumerico" min="0"
                              style="text-align: right;" (keypress)="allowOnlyNumbers($event)" />
                          </mat-form-field><a *ngIf="quadro.value.selezionabile" style="padding-left: 10px;">€</a>
                        </div>
                      </div>
                    </ng-container>
                  </div> -->
                  <app-quadro-economico-centralized
                  [form]="getStrutturaForm(index)"
                  [appaltoIntegrato]="strutturaInsInt.value.appaltoIntegrato"
                  [isVisualizzazione]="true"
                  [isRequired]="false"
                  [idIntervento]="intCopiatoId">
                  </app-quadro-economico-centralized>
                </mat-expansion-panel>
                <mat-expansion-panel>
                  <mat-expansion-panel-header>
                    <h4>Responsabili</h4>
                  </mat-expansion-panel-header>
                  <div class="form-row">
                    <div>
                      <label class="small-text">Responsabile della Struttura Complessa o facente funzione: </label>
                      <div class="responsabile-div">
                        <mat-form-field class="inputResponsabile">
                          <mat-label>Nome</mat-label>
                          <input matInput type="text" formControlName="intstrRespStrComplesNome" />
                        </mat-form-field>
                        <mat-form-field class="inputResponsabile">
                          <mat-label>Cognome</mat-label>
                          <input matInput type="text" formControlName="intstrRespStrComplesCognome" />
                        </mat-form-field>
                        <mat-form-field class="inputResponsabile">
                          <mat-label>Codice Fiscale</mat-label>
                          <input matInput type="text" formControlName="intstrRespStrComplesCf" appUppercase/>
                        </mat-form-field>
                      </div>
                    </div>
                  </div>
                  <div class="form-row">
                    <div>
                      <label class="small-text">Responsabile della Struttura Semplice o facente funzione: </label>
                      <div class="responsabile-div">
                        <mat-form-field class="inputResponsabile">
                          <mat-label>Nome</mat-label>
                          <input matInput type="text" formControlName="intstrRespStrSemplNome" />
                        </mat-form-field>
                        <mat-form-field class="inputResponsabile">
                          <mat-label>Cognome</mat-label>
                          <input matInput type="text" formControlName="intstrRespStrSemplCognome" />
                        </mat-form-field>
                        <mat-form-field class="inputResponsabile">
                          <mat-label>Codice Fiscale</mat-label>
                          <input matInput type="text" formControlName="intstrRespStrSemplCf" appUppercase />
                        </mat-form-field>
                      </div>
                    </div>
                  </div>
                </mat-expansion-panel>
                <div class="parere-div">
                  <mat-checkbox color="primary" formControlName="parerePPP" (change)="checkParerePPPEnabled(index)" class="small-text">
                    Parere Regione su PPP
                  </mat-checkbox>

                  <mat-form-field class="inputResponsabile">
                    <mat-label>Numero</mat-label>
                    <input matInput type="text" formControlName="numeroPPP"/>
                  </mat-form-field>

                  <div class="parere-date-div">
                    <label>Data: </label>
                    <mat-form-field appearance="fill" class="custom-width">
                      <input matInput [matDatepicker]="pickerPPP" [max]="maxDate" readonly  (click)="pickerPPP.open()" placeholder="gg/mm/aaaa" formControlName="dataPPP" (keydown)="onInputDate($event)"  >
                      <mat-datepicker-toggle matSuffix [for]="pickerPPP"></mat-datepicker-toggle>
                      <mat-datepicker #pickerPPP></mat-datepicker>
                    </mat-form-field>
                  </div>
                </div>

                <div class="allega-div">
                  <p class="small-text">Allegato PPP</p>
                  <p mat-raised-button (click)="fileInputPPP.click()" class="allega-button upload-button">Allega</p>
                  <input #fileInputPPP type="file" accept=".pdf" (change)="onFileSelectedPPP($event, index)" style="display: none" />
                </div>

                <!-- Mostra il file se è stato caricato -->
                <div *ngIf="checkFilePPP(index)" class="allega-div">
                  <!-- Nome del file e link per la visualizzazione -->
                  <a [href]="getFileUrlPPP(index)" [download]="getFileNamePPP(index)" target="_blank">{{
                    getFileNamePPP(index) }}</a>

                  <!-- Icona del cestino per rimuovere il file -->
                  <button type="button" mat-icon-button (click)="removeFilePPP(index)" style="color: red;">
                    <mat-icon>delete</mat-icon>
                  </button>
                </div>


                <div class="parere-div">
                  <mat-checkbox color="primary" formControlName="parereHTA" (change)="checkParereHtaEnabled(index)" class="small-text">
                    Parere HTA
                  </mat-checkbox>

                  <mat-form-field class="inputResponsabile">
                    <mat-label>Numero</mat-label>
                    <input matInput type="text" formControlName="numeroHTA"/>
                  </mat-form-field>

                  <div class="parere-date-div">
                    <label>Data: </label>
                    <mat-form-field appearance="fill" class="custom-width">
                      <input matInput [matDatepicker]="pickerHTA" [max]="maxDate" readonly  (click)="pickerHTA.open()" placeholder="gg/mm/aaaa" formControlName="dataHTA" (keydown)="onInputDate($event)">
                      <mat-datepicker-toggle matSuffix [for]="pickerHTA"></mat-datepicker-toggle>
                      <mat-datepicker #pickerHTA></mat-datepicker>
                    </mat-form-field>
                  </div>
                </div>

                <div class="allega-div">
                  <p class="small-text">Allegato HTA</p>
                  <p mat-raised-button (click)="fileInputHTA.click()" class="allega-button upload-button">Allega</p>
                  <input #fileInputHTA type="file" accept=".pdf" (change)="onFileSelectedHTA($event, index)" style="display: none" />
                </div>

                <!-- Mostra il file se è stato caricato -->
                <div *ngIf="checkFileHTA(index)" class="allega-div">
                  <!-- Nome del file e link per la visualizzazione -->
                  <a [href]="getFileUrlHTA(index)" [download]="getFileNameHTA(index)" target="_blank">{{
                    getFileNameHTA(index) }}</a>

                  <!-- Icona del cestino per rimuovere il file -->
                  <button type="button" mat-icon-button (click)="removeFileHTA(index)" style="color: red;">
                    <mat-icon>delete</mat-icon>
                  </button>
                </div>

              </mat-expansion-panel>
            </ng-container>
          </div>
        </mat-card-content>

      </mat-card>


      <mat-card style="margin-bottom: 40px">
        <mat-card-content>
          <h4>Principali indicatori dell’intervento</h4>
          <div class="form-row">
            <mat-form-field class="custom-width">
              <mat-label>Cup</mat-label>
              <input matInput type="text" formControlName="cup" />
            </mat-form-field>
          </div>
          <div class="form-row">
            <mat-form-field class="custom-width">
              <mat-label>Codice PGMEAS intervento</mat-label>
              <input matInput type="text" formControlName="codInterventoPGMEAS" />
            </mat-form-field>
          </div>
          <div class="form-row">
            <mat-form-field class="custom-width">
              <mat-label>Codice PGMEAS intervento origine</mat-label>
              <input matInput type="text" formControlName="codInterventoOriginePGMEAS" />
            </mat-form-field>
          </div>
          <div class="form-row">
            <mat-form-field class="custom-width">
              <mat-label>Anno inserimento intervento origine</mat-label>
              <input matInput type="text" formControlName="annoInserimentoInterventoOrigine" min="0"
                (keypress)="allowOnlyNumbers($event)" />
            </mat-form-field>
          </div>
          <div class="form-row">
            <mat-form-field class="custom-width">
              <mat-label>Codice NSIS intervento</mat-label>
              <input matInput type="text" formControlName="codNSISIntervento" />
            </mat-form-field>
          </div>
          <div class="form-row">
            <mat-form-field class="titolo-textarea-field">
              <mat-label>Titolo Intervento</mat-label>
              <textarea formControlName="titoloIntervento" matInput  [maxLength]="255" ></textarea>
             </mat-form-field>
          </div>
          <div class="form-row">
            <mat-form-field class="custom-select long-select">
              <mat-label>Obiettivo dell'intervento</mat-label>
              <mat-select formControlName="obiettivo" multiple class="disableSelect">
                <mat-option *ngFor="let obiettivo of obiettivoList" [value]="obiettivo.intObiettivoId" disabled>
                  {{ obiettivo.intObiettivoDesc }}
                </mat-option>
              </mat-select>
            </mat-form-field>
          </div>
          <div class="form-row">
            <mat-form-field class="custom-select long-select">
              <mat-label>Finalita' dell'intervento: </mat-label>
              <mat-select formControlName="finalita" multiple class="disableSelect">
                <mat-option *ngFor="let finalita of finalitaList" [value]="finalita.intFinalitaId" disabled>
                  {{ finalita.intfinalitaDesc }}
                </mat-option>
              </mat-select>
            </mat-form-field>
          </div>
          <div class="form-row">
            <mat-form-field class="custom-select long-select">
              <mat-label>Tipologia intervento</mat-label>
              <mat-select formControlName="tipologia" multiple class="disableSelect">
                <mat-option *ngFor="let tipo of interventoTipoList" [value]="tipo.intTipoId" disabled>
                  {{ tipo.intTipoDesc }}
                </mat-option>
              </mat-select>
            </mat-form-field>
          </div>
          <div class="form-row">
            <mat-form-field class="custom-select long-select">
              <mat-label>Descrizione attrezzatura</mat-label>
              <mat-select formControlName="attrezzatura" multiple class="disableSelect">
                <mat-option *ngFor="let attrezzatura of attrezzaturaList" [value]="attrezzatura.intTipoDetId" disabled>
                  {{ attrezzatura.intTipoDetDesc }}
                </mat-option>
              </mat-select>
            </mat-form-field>
          </div>
          <div class="form-row">
            <mat-form-field class="custom-select long-select">
              <mat-label>Categoria intervento</mat-label>
              <mat-select formControlName="categoria" multiple class="disableSelect">
                <mat-option *ngFor="let categoria of categoriaList" [value]="categoria.intCategoriaId" disabled>
                  {{ categoria.intCategoriaDesc }}
                </mat-option>
              </mat-select>
            </mat-form-field>
          </div>
          <div class="form-row">
            <mat-form-field class="custom-width">
              <mat-label>Anno priorita'</mat-label>
              <input matInput type="text" formControlName="annoPriorita" min="0"
                (keypress)="allowOnlyNumbers($event)" (blur)="checkAnnoPriorita($event)" />
            </mat-form-field>
          </div>
          <div class="form-row">
            <mat-form-field class="custom-width">
              <mat-label>Priorita'</mat-label>
              <input matInput type="text" formControlName="priorita" />
            </mat-form-field>
          </div>
          <div class="form-row">
            <mat-form-field class="custom-width">
              <mat-label>Sotto-priorita'</mat-label>
              <input matInput type="text" maxlength="1" formControlName="sottoPriorita" (keypress)="allowOnlyChar($event)" />
            </mat-form-field>
          </div>
          <div class="form-row">
            <mat-form-field class="custom-select long-select">
              <mat-label>Tipologia contrattuale</mat-label>
              <mat-select formControlName="contrattoTipo" multiple class="disableSelect">
                <mat-option *ngFor="let contratto of contrattoTipoList" [value]="contratto.intContrattoTipoId" disabled>
                  {{ contratto.intContrattoTipoDesc }}
                </mat-option>
              </mat-select>
            </mat-form-field>
          </div>
          <div class="form-row">
            <mat-form-field class="custom-select long-select">
              <mat-label>Tipologia appalto</mat-label>
              <mat-select formControlName="appaltoTipo" multiple class="disableSelect">
                <mat-option *ngFor="let appalto of appaltoTipoList" [value]="appalto.intAppaltoTipoId" disabled>
                  {{ appalto.intAppaltoTipoDesc }}
                </mat-option>
              </mat-select>
            </mat-form-field>
          </div>
          <div class="form-row">
            <mat-form-field class="custom-select long-select">
              <mat-label>Stato progettuale</mat-label>
              <mat-select formControlName="statoProg" multiple class="disableSelect">
                <mat-option *ngFor="let statoProg of statoProgList" [value]="statoProg.intStatoProgId" disabled>
                  {{ statoProg.intStatoProgDesc }}
                </mat-option>
              </mat-select>
            </mat-form-field>
          </div>
        </mat-card-content>
      </mat-card>

      <mat-card style="margin-bottom: 40px">
        <mat-card-content>
          <h4>Costo complessivo dell'intervento
          </h4>
          <!-- <mat-form-field  class="custom-costo-width">
            <mat-label>Costo Intervento</mat-label>
            <input matInput style="text-align: right;" type="number" formControlName="costoIntervento"
              (keypress)="allowOnlyNumbers($event)" appForceTwoDecimals/>
          </mat-form-field><a style="padding-left: 10px;">€</a> -->
          <app-formatted-currency
          formControlName="costoIntervento"
          label="Costo Intervento"
          [isDisabledIn]="true"
        ></app-formatted-currency>
        </mat-card-content>
      </mat-card>

      <mat-card style="margin-bottom: 40px">
        <mat-card-content>
          <h4>Durata stimata dell'intervento (in giorni naturali
            consecutivi)
          </h4>
          <p class="small-text">
            La durata deve essere comprensiva di tutte le procedure
            amministrative propedeutiche all'approvazione di ogni singola
            fase
          </p>
          <div class="durata-stimata-div">
            <mat-form-field class="durata-stimata-input">
              <mat-label>PROGETTAZIONE</mat-label>
              <input matInput type="number" formControlName="progettazione" min="0"
                (keypress)="allowOnlyNumbers($event)" />
            </mat-form-field>
            <mat-form-field class="durata-stimata-input">
              <mat-label>AFFIDAMENTO LAVORI</mat-label>
              <input matInput type="number" formControlName="affidamentoLavori" min="0"
                (keypress)="allowOnlyNumbers($event)" />
            </mat-form-field>
            <mat-form-field class="durata-stimata-input">
              <mat-label>ESECUZIONE LAVORI</mat-label>
              <input matInput type="number" formControlName="esecuzioneLavori" min="0"
                (keypress)="allowOnlyNumbers($event)" />
            </mat-form-field>
            <mat-form-field>
              <mat-label>COLLAUDO</mat-label>
              <input matInput type="number" formControlName="collaudo" min="0" (keypress)="allowOnlyNumbers($event)" />
            </mat-form-field>
          </div>
          <div class="appalto-integrato-div">
            <p class="appalto-integrato-p small-text">APPALTO INTEGRATO</p>
            <mat-slide-toggle formControlName="appaltoIntegrato"></mat-slide-toggle>
          </div>
          <p class="small-text">
            Totale durata stimata dell'intervento:
            <b>{{ insertionForm.value.totaleDurataIntervento }}</b>
          </p>
        </mat-card-content>
      </mat-card>
      <mat-card style="margin-bottom: 40px">
        <mat-card-content>
          <h4>Responsabili dell'intervento
          </h4>
          <div class="form-row">
            <div>
              <label class="small-text">Direttore Generale: </label>
              <div class="responsabile-div">
                <mat-form-field class="inputResponsabile">
                  <mat-label>Nome</mat-label>
                  <input matInput type="text" formControlName="direttoreNome" />
                </mat-form-field>
                <mat-form-field class="inputResponsabile">
                  <mat-label>Cognome</mat-label>
                  <input matInput type="text" formControlName="direttoreCognome" />
                </mat-form-field>
                <mat-form-field class="inputResponsabile">
                  <mat-label>Codice fiscale</mat-label>
                  <input matInput type="text" formControlName="direttoreCF" appUppercase/>
                </mat-form-field>
              </div>
            </div>
          </div>
          <div class="form-row">
            <div>
              <label class="small-text">Commissario: </label>
              <div class="responsabile-div">
                <mat-form-field class="inputResponsabile">
                  <mat-label>Nome</mat-label>
                  <input matInput type="text" formControlName="commissarioNome" />
                </mat-form-field>
                <mat-form-field class="inputResponsabile">
                  <mat-label>Cognome</mat-label>
                  <input matInput type="text" formControlName="commissarioCognome" />
                </mat-form-field>
                <mat-form-field class="inputResponsabile">
